<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://openclassrooms.com/projects/bibliot"
           targetNamespace="http://openclassrooms.com/projects/bibliot" elementFormDefault="qualified">

    <!-- methode getUserByLoginAndPassword -->

    <xs:element name="getUserByLoginAndPasswordRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="login" type="xs:string"/>
                <xs:element name="password" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getUserByLoginAndPasswordResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="serviceStatus" type="tns:serviceStatus"/>
                <xs:element name="user" type="tns:user"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- methode create user -->

    <xs:element name="createUserRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="user" type="tns:user"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="createUserResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="serviceStatus" type="tns:serviceStatus"/>
                <xs:element name="user" type="tns:user"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- methode get works by author -->

    <xs:element name="getWorkByAuthorRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="author" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getWorkByAuthorResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="serviceStatus" type="tns:serviceStatus"/>
                <xs:element name="work" type="tns:work"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- methode create work -->

    <xs:element name="createWorkRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="work" type="tns:work"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="createWorkResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="serviceStatus" type="tns:serviceStatus"/>
                <xs:element name="work" type="tns:work"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- methode get works by publication date -->

    <xs:element name="getWorkByPublicationDateRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="publicationDate" type="xs:date"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getWorkByPublicationDateResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="serviceStatus" type="tns:serviceStatus"/>
                <xs:element name="work" type="tns:work"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

